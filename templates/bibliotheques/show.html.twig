{% extends 'base.html.twig' %}

{% block title %}Bibliotheques{% endblock %}
{% block nom_page %}Bibliotheques{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bibliotheque.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ bibliotheque.name }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ bibliotheque.city }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bibliotheque.description }}</td>
            </tr>
            <tr>
                <th>Livres</th>
                <td>
                {% for livre in bibliotheque.livres %}
                    <a href="{{ path('livres_show', {'id': livre.id}) }}">{{ livre.title }}</a><br/>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('bibliotheques_index') }}">Retour Ã  la liste</a>

    {% if app.user %}
        <a href="{{ path('bibliotheques_edit', {'id': bibliotheque.id}) }}">Modifier</a>
        {{ include('bibliotheques/_delete_form.html.twig') }}
    {% endif %}    

{% endblock %}
