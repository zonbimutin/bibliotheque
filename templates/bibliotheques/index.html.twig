{% extends 'base.html.twig' %}

{% block title %}Bibliotheques index{% endblock %}

{% block body %}
    <h1>Bibliotheques index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>City</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bibliotheque in bibliotheques %}
            <tr>
                <td>{{ bibliotheque.id }}</td>
                <td>{{ bibliotheque.name }}</td>
                <td>{{ bibliotheque.city }}</td>
                <td>{{ bibliotheque.description }}</td>
                <td>
                    <a href="{{ path('bibliotheques_show', {'id': bibliotheque.id}) }}">show</a>
                    <a href="{{ path('bibliotheques_edit', {'id': bibliotheque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('bibliotheques_new') }}">Create new</a>
{% endblock %}
