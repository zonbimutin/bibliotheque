{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}
{% block nom_page %}Categories{% endblock %}

{% block body %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Livres</th>
                <td>
                {% for livre in category.livres %}
                    <a href="{{ path('livres_show', {'id': livre.id}) }}">{{ livre.title }}</a><br/>
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('categories_index') }}">Retour Ã  la liste</a>

    

    {% if app.user %}
        <a href="{{ path('categories_edit', {'id': category.id}) }}">Modifier</a>
        {{ include('categories/_delete_form.html.twig') }}
    {% endif %}  
{% endblock %}
